 <div id="<%= dom_id fournisseur %>" class="my-2">

  <div class="card mx-2 my-3 p-3 light-beige-colored shadow-sm">

    <div data-turbo="false">

      <%= link_to fournisseur, class: "text-decoration-none text-dark" do %>
        <%= field_with_label("Nom:", fournisseur.nom) %> 
        <%= field_with_label("Tel:", fournisseur.tel) %> 
        <%= field_with_label("Mail:", fournisseur.mail) %> 
        <%= field_with_label("Contact:", fournisseur.contact) %> 
        <%= field_with_label("Site:", fournisseur.site) %> 
        <%= field_with_label("Notes:", fournisseur.notes) %>       
      <% end %>
    
    </div>
    
    <%= links_record(fournisseur) %>  

  </div>

</div>
