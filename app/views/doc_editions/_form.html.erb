      </div>
      
      <hr>
    
      <div class="container text-center">
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
          <% Commande::EDITION_TYPES.each do |edition_type| %>
            <%= form.radio_button :edition_type, edition_type, id: "btnradio-#{edition_type}", class: "btn-check", data: { action: "change->form-element#remotesubmit" } %>
            <label class="btn btn-outline-primary px-4" for="btnradio-<%= edition_type %>"><%= edition_type %></label>
          <% end %>
        </div>
      </div>

    <% end %>

    <% if doc_edition.edition_type? %>

      <div class="container text-center fs-5 mt-4">
        <i class="fa-regular fa-message me-1"></i>
        <span>Commentaires</span>
      </div> 

      <hr>
      
      <div class="input-group mt-4">
        <%#= form.label :commentaires, class: "input-group-text" %>
        <%= form.text_area :commentaires, class: "form-control" %>
      </div>
    <% end %>

  <% end %>
  </div>


  <br><br>

  <%= custom_submit_button(form) %>

