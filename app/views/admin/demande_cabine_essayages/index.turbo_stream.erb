<%# demande_cabine_essayages infinite scroll pagination %>

<%= turbo_stream.append :demande_cabine_essayages do %>
    <%= render @demande_cabine_essayages %>
<% end %>

<% if @pagy.next.present? %>
    <%= turbo_stream.replace :pagination do %>
        <%= turbo_frame_tag :pagination, loading: :lazy,
                            src: admin_demande_cabine_essayages_path(format: :turbo_stream,
                            page: @pagy.next, q: params[:q]&.to_unsafe_h ) %>
    <% end %>

<% end %>

