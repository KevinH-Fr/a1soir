
<%= bandeau_entete("Stock", "boxes", "", "", "") %>

<div class="card mx-2 my-3 light-beige-colored shadow-sm">
  <div class="card-header fw-bold"> 
    général
  </div>
  <div class="card-body"> 
    <p> Total produits : <span class="fw-bold"> <%= total_produits(@produits) %> </span> </p> 
    <p> Total loués : <span class="fw-bold"> <%= total_loues(@produits) %> </span> </p> 
    <p> Total vendus : <span class="fw-bold"> <%= total_vendus(@produits) + total_vendus_eshop(@produits) %> </span> </p> 
    <p> dont eshop : <span class="fw-bold"> <%= total_vendus_eshop(@produits) %> </span> </p> 

    <hr>
    <p> Total services : <span class="fw-bold"> <%= total_services(@produits) %> </span> </p> 
    <p> Total services vendus : <span class="fw-bold"> <%= articles_services_in_commandes %> </span> </p> 

    <div class="d-flex gap-1">

      <% current_year = Date.today.year %>
      <% [0, 1, 2].each do |offset| %>
        <% year = current_year - offset %>
        <%= link_to "Charger inventaire - fin #{year}",
                      admin_export_products_csv_path(year: year),
                      class: 'btn btn-sm btn-primary' %>
      <% end %>
    </div>

  </div>
</div>

<div class="card mx-2 my-3 light-beige-colored shadow-sm">
  <div class="card-header fw-bold"> 
    statut produits loués
  </div>
  <div class="card-body"> 
    <p> loués non-retirés :  <span class="fw-bold"> <%= articles_loues_in_commandes_non_retires %> </span> </p> 
    <p> loués retirés :   <span class="fw-bold"> <%= articles_loues_in_commandes_retires %> </span>  </p> 
    <p> loués rendus :   <span class="fw-bold"> <%= articles_loues_in_commandes_rendus %> </span>  </p> 
  </div>

</div>