<%# tailles infinite scroll pagination et recherche pagy %>

<%= turbo_stream.append :tailles do %>
    <%= render @tailles %>
<% end %>

<% if @pagy.next.present? %>
    <%= turbo_stream.replace :pagination do %>
        <%= turbo_frame_tag :pagination, loading: :lazy,
                            src: admin_tailles_path(format: :turbo_stream,
                            page: @pagy.next, q: params[:q]&.to_unsafe_h ) %>
    <% end %>

<% end %>
