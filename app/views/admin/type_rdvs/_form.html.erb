<div class="card m-2 w-100" id="<%= dom_id(type_rdv) %>">
  <% type_rdv_local = local_assigns[:type_rdv] || @type_rdv %>
  <%= form_with model: [:admin, type_rdv_local], url: type_rdv_local.persisted? ? admin_type_rdv_path(type_rdv_local) : admin_type_rdvs_path, class: "card" do |f| %>
    <div class="card-body">
      <% if type_rdv_local.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% type_rdv_local.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :code, "Code", class: "form-label" %>
        <%= f.text_field :code, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :duree_base_minutes, "DurÃ©e de base (minutes)", class: "form-label" %>
        <%= f.number_field :duree_base_minutes, class: "form-control", min: 1 %>
      </div>
    </div>

    <div class="card-footer d-flex justify-content-between">
      <%= link_to dashboard_admin_parametre_rdvs_path(anchor: "types"), class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i>Retour
      <% end %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
