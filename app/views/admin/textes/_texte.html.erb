<div id="<%= dom_id texte %>">
  <div class="mb-4">
    <h4 class="text-primary"><%= texte.titre %></h4>
  </div>

  <div class="row g-3">
    <!-- Boutique -->
    <div class="col-md-12">
      <div class="card h-100">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0">Boutique</h6>
        </div>
        <div class="card-body">
          <div class="trix-content"><%= texte.boutique %></div>
        </div>
      </div>
    </div>

    <!-- Equipe -->
    <div class="col-md-12">
      <div class="card h-100">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0">Equipe</h6>
        </div>
        <div class="card-body">
          <div class="trix-content"><%= texte.equipe %></div>
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0">Contact</h6>
        </div>
        <div class="card-body">
          <div class="trix-content"><%= texte.contact %></div>
        </div>
      </div>
    </div>

    <!-- Horaire -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0">Horaire</h6>
        </div>
        <div class="card-body">
          <div class="trix-content"><%= texte.horaire %></div>
        </div>
      </div>
    </div>

    <!-- Adresse -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0">Adresse</h6>
        </div>
        <div class="card-body">
          <div class="trix-content"><%= texte.adresse %></div>
        </div>
      </div>
    </div>

    <!-- Images du carousel -->
    <% if texte.carousel_images.present? %>
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-secondary text-white">
            <h6 class="mb-0">Images du carousel</h6>
          </div>
          <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
              <% texte.carousel_images.each do |image| %>
                <%= image_tag(image, class: "rounded shadow-sm admin-carousel-image") %>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
