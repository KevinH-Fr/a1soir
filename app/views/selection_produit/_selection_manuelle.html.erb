
<%# ajouter logique pour filtres et recherche %>

<div class="d-flex flex-wrap justify-content-center align-items-center py-4">
  <% @categorie_produits.each do |categorie_produit| %>
    <%= button_to display_categorie_selected_selection_produit_index_path(categorie_produit: categorie_produit), class: "btn btn-primary m-2 btn-topic mx-3 px-4",
      data: { controller: "button-color", action: "click->button-color#handleClick" },
      "data-original-color": "text-primary" do %>
      <i class="fa fa-solid fa-xl text-primary <%= categorie_produit.nom.downcase.parameterize %>"></i>
      <span class="ms-1 fw-bold text-light"><%= categorie_produit.nom %></span>
    <% end %>
  <% end %>
</div>


