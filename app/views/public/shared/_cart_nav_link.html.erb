<% if ENV["ONLINE_SALES_AVAILABLE"] == "true" %>
  <%= link_to cart_url, class: "nav-item m-2 mx-3 text-decoration-none public-brand-color position-relative d-inline-flex align-items-center gap-2", id: "cart_badge" do %>
    <i class="bi bi-bag fs-4"></i>
    <% if @cart.size > 0 %>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill public-brand-bg-color small">
        <%= @cart.size %>
        <span class="visually-hidden">articles dans le panier</span>
      </span>
    <% end %>
  <% end %>
<% end %>

