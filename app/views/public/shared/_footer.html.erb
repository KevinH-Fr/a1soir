<footer class="mt-5">
  <div class="container py-5">
    <div class="row g-4">
      
      <!-- Logo et Informations -->
      <div class="col-12 col-md-4 mb-4 mb-md-0">
        <%= link_to root_url, class: "d-inline-block mb-3" do %>
          <%= image_tag('/images/a1soirlogo2.png', class: 'mb-0', width: "200", alt: "Logo Autour d'un Soir") %>
        <% end %>
        
        <% if @footer_texte_adresse.present? %>
          <div class="mb-3 d-flex align-items-start text-light">
            <i class="bi bi-geo-alt-fill me-2 small" style="flex-shrink: 0; margin-top: 2px;"></i>
            <p class="small mb-0 fw-bold" style="line-height: 1.6;">
              <%= @footer_texte_adresse %>
            </p>
          </div>
        <% end %>
        
        <% if @footer_texte_horaire.present? %>
          <div class="mb-3 d-flex align-items-start text-light">
            <i class="bi bi-clock-fill me-2 small" style="flex-shrink: 0; margin-top: 2px;"></i>
            <p class="small mb-0 fw-bold" style="line-height: 1.6;">
              <%= @footer_texte_horaire %>
            </p>
          </div>
        <% end %>

        <% if @footer_texte_contact.present? %>
          <div class="mb-3 d-flex align-items-start text-light">
            <i class="bi bi-telephone-fill me-2 small" style="flex-shrink: 0; margin-top: 2px;"></i>
            <p class="small mb-0 fw-bold" style="line-height: 1.6;">
              <%= @footer_texte_contact %>
            </p>
          </div>
        <% end %>
      </div>
      
      <!-- Navigation -->
      <div class="col-6 col-md-2">
        <h6 class="fw-bold text-uppercase mb-4 text-light">Navigation</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><%= link_to "Accueil", home_path, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "La boutique", la_boutique_url, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Nos collections", nos_collections_url, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Le concept", le_concept_url, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Nos autres activités", nos_autres_activites_url, class: "text-light text-decoration-none hover-link" %></li>
        </ul>
      </div>

      <!-- Services -->
      <div class="col-6 col-md-2">
        <h6 class="fw-bold text-uppercase mb-4 text-light">Services</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><%= link_to "Catégories", categories_url(subdomain: "shop"), class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Produits", produits_index_url(subdomain: "shop"), class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Rendez-vous", rdv_url(subdomain: "shop"), class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "Contact", contact_url, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "FAQ", faq_url, class: "text-light text-decoration-none hover-link" %></li>
        </ul>
      </div>

      <!-- Suivez-nous -->
      <div class="col-6 col-md-2">
        <h6 class="fw-bold text-uppercase mb-4 text-light">Suivez-nous</h6>
        <div class="d-flex flex-column gap-2">
          <%= link_to "https://www.instagram.com/autourdunsoir/", class: "text-light text-decoration-none hover-link d-flex align-items-center gap-2", target: "_blank", rel: "noopener noreferrer" do %>
            <i class="bi bi-instagram fs-5"></i>
            <span>Instagram</span>
          <% end %>
          <%= link_to "https://www.facebook.com/autourdunsoir/", class: "text-light text-decoration-none hover-link d-flex align-items-center gap-2", target: "_blank", rel: "noopener noreferrer" do %>
            <i class="bi bi-facebook fs-5"></i>
            <span>Facebook</span>
          <% end %>
          <%= link_to "https://www.tiktok.com/@autourd1soir", class: "text-light text-decoration-none hover-link d-flex align-items-center gap-2", target: "_blank", rel: "noopener noreferrer" do %>
            <i class="bi bi-tiktok fs-5"></i>
            <span>TikTok</span>
          <% end %>
        </div>
      </div>

      <!-- Légal -->
      <div class="col-6 col-md-2">
        <h6 class="fw-bold text-uppercase mb-4 text-light">Légal</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><%= link_to "Mentions légales", legal_url, class: "text-light text-decoration-none hover-link" %></li>
          <li class="mb-2"><%= link_to "CGV", cgv_url(subdomain: "shop"), class: "text-light text-decoration-none hover-link" %></li>
        </ul>
      </div>

    </div>
  </div>

  <!-- Copyright -->
  <div class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <p class="text-light small mb-0 opacity-75">
            &copy; <%= Time.current.year %> Autour d'un Soir - Tous droits réservés
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>