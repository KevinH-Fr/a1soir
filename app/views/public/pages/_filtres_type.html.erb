<div id="filtres-type">

    <div class="text-uppercase mt-2">
        Type
    </div>

    <div class="d-flex flex-wrap gap-1">
        <%= button_to "Tous", 
        update_filters_path(
            slug: params[:slug], 
            id: params[:id], 
            taille: params[:taille], 
            couleur: params[:couleur],
            prixmax: params[:prixmax],
            type: nil
        ), 
            class: link_badge_type_class(nil) %>

        <% @types.each do |type| %>
            <%= button_to type, 
                update_filters_path(
                        slug: params[:slug], 
                        id: params[:id], 
                        taille: params[:taille], 
                        couleur: params[:couleur],
                        prixmax: params[:prixmax],
                        type: type
                ),
                class: link_badge_type_class(type) %>
        <% end %>
    </div>

</div>