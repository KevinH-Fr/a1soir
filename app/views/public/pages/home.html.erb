<!-- Section d'animation au scroll (textes + zoom image + robe 3D) -->
<%= render 'public/pages/home/scroll_animation' %>

<!-- Hero section avec modèle 3D -->
<%#= render 'home_hero' %>

<!-- Flèche animée pour inviter au scroll -->
<div class="scroll-indicator">
  <i class="bi bi-chevron-down"></i>
</div>

<!-- Section d'accueil -->
<div class="public-main-content">
  <div class="container-fluid">
    <!-- Section découverte -->
    <%= render 'public/pages/home/discover_section' %>

    <!-- Cartes de navigation -->
    <%= render 'home_nav_cards' %>
  </div>
</div>


<style>
  /* Container Three.js avec gradient CSS (fond étoilé global) - Uniquement sur la page d'accueil */
  #three-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 0;
    background: linear-gradient(180deg, 
      #0a0c14 0%,    /* Bleu nuit sombre en haut */
      #060810 40%,   /* Transition douce */
      #030508 70%,   /* Encore plus sombre */
      #000000 100%   /* Noir pur en bas */
    );
  }

  /* Contenu par-dessus le fond étoilé */
  .public-content {
    position: relative;
    /* z-index removed to avoid creating a stacking context that hides flash behind chatbot */
  }

  /* Footer */
  footer {
    position: relative;
    z-index: 0;
    backdrop-filter: blur(0px);
  }
</style>