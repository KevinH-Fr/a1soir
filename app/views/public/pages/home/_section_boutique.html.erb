<section data-controller="boutique-text-scroll" class="position-relative overflow-hidden" style="min-height: 100vh;">
  <!-- Image en pleine page -->
  <%= image_tag("/images/dessin1.png", class: "position-absolute top-0 start-0 w-100 h-100", style: "object-fit: cover; z-index: 0;", alt: "La boutique") %>
  
  <!-- Card avec texte par-dessus l'image -->
  <div class="container position-relative h-100 d-flex align-items-center" style="min-height: 100vh; z-index: 1;">
    <div class="row w-100">
      <!-- Sur mobile : card en haut, sur grand écran : card à droite -->
      <div class="col-12 col-lg-5 offset-lg-7">
        <div data-boutique-text-scroll-target="card" class="p-3 p-lg-4 my-3 my-lg-0" style="background-color: rgba(255, 255, 255, 0.4); border-radius: 1px;">
          <div class="text-end text-dark">
            <h2 data-boutique-text-scroll-target="item" class="display-5 fw-bold mb-3 text-dark">
              La boutique
            </h2>
            
            <div data-boutique-text-scroll-target="item" class="mb-3 p-2 p-lg-3 rounded">
              <p class="mb-0 text-dark">
                Notre boutique de Cannes au cœur de la cote d'azur et de tous ses évènements prestigieux.             
              </p>
            </div>
            
            <div data-boutique-text-scroll-target="item" class="mt-3">
              <%= link_to "Découvrir", la_boutique_url, class: "btn btn-dark btn-lg px-4 public-btn-border-radius fw-bold" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

