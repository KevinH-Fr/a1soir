<!-- Carousel horizontal de cards contrôlé par le scroll -->
<div class="scroll-cards-carousel">
  <div class="scroll-cards-container">
    <% 
    nav_cards = [
      { icon: 'shop', title: 'La boutique de Cannes', description: 'Venez nous rencontrer', url: la_boutique_path },
      { icon: 'star-fill', title: 'Nos collections', description: 'Découvrez notre sélection', url: '#collections' },
      { icon: 'lightbulb-fill', title: 'Le concept', description: 'Notre philosophie', url: '#concept' },
      { icon: 'stars', title: 'Nos autres activités', description: 'Costumes d\'époque & prestations', url: nos_autres_activites_path },
      { icon: 'shield-check', title: 'Légal', description: 'Mentions & CGV', url: '#legal' },
      { icon: 'question-circle-fill', title: 'FAQ', description: 'Questions fréquentes', url: faq_path }
    ]
    %>
    
    <% nav_cards.each_with_index do |card, index| %>
      <%= nav_card_scroll(
        index: index,
        icon: card[:icon],
        title: card[:title],
        description: card[:description],
        url: card[:url]
      ) %>
    <% end %>
  </div>
</div>

