<div class="bg-white text-dark">
<!-- Section Équipe -->
<% if @texteEquipe.present? %>
  <section class="py-5 my-4" data-aos="fade-up" data-aos-duration="800">
    <div class="container">
      <!-- En-tête de section -->
      <div class="row mb-5">
        <div class="col-12 text-center">
          <div class="section-title-wrapper mb-3" data-aos="title-underline">
            <h2 class="section-title text-dark" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; position: relative; display: inline-block;">
              Notre équipe
              <span class="section-title-underline"></span>
            </h2>
          </div>
          <p class="opacity-75" style="font-size: 1.1rem;">Des professionnels passionnés à votre service</p>
        </div>
      </div>
      
      <!-- Image et texte d'introduction -->
      <div class="row align-items-center g-4 g-lg-5 mb-5">
        <div class="col-12 col-md-8" data-aos="fade-right" data-aos-duration="800">
          <div class="position-relative overflow-hidden rounded-1 shadow-lg" style="height: 450px; transition: transform 0.3s ease;">
            <%= image_tag("equipe1.jpg", class: "img-fluid w-100 h-100", style: "object-fit: cover; transition: transform 0.5s ease;") %>
            <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.3)); pointer-events: none;"></div>
          </div>
        </div>
        <div class="col-12 col-md-4" data-aos="fade-left" data-aos-duration="800" data-aos-delay="200">
          <div class="card bg-light p-4 p-md-5 h-100 shadow-lg rounded-1 position-relative overflow-hidden">
            <!-- Icône de quote décorative -->
            <div class="position-absolute top-0 start-0 p-3" style="opacity: 0.15;">
              <i class="bi bi-quote text-secondary" style="font-size: 3rem;"></i>
            </div>
            
            <!-- Contenu -->
            <div class="position-relative">
              <div class="trix-content" style="font-size: 1.05rem; line-height: 1.8;">
                <%= @texteEquipe %>
              </div>
            </div>
            
            <!-- Icône de quote fermante en bas -->
            <div class="position-absolute bottom-0 end-0 p-3" style="opacity: 0.1; transform: rotate(180deg);">
              <i class="bi bi-quote text-secondary" style="font-size: 3rem;"></i>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Cards avec les différents aspects de l'équipe -->
      <div class="row g-4 justify-content-center">
        <div class="col-12 col-md-4 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="100">
          <%= public_card(
            icon: "people-fill", 
            title: "Expérience", 
            content: "<p class='text-center mb-0'>Plus de 20 ans d'expérience dans le domaine de la mode et de l'événementiel. Notre équipe connaît parfaitement les tendances et les exigences de chaque type d'événement.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="200">
          <%= public_card(
            icon: "award-fill", 
            title: "Expertise", 
            content: "<p class='text-center mb-0'>Conseillères spécialisées en styling, retouches professionnelles sur place, et accompagnement personnalisé pour chaque client. Votre satisfaction est notre priorité.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="300">
          <%= public_card(
            icon: "heart-fill", 
            title: "Passion", 
            content: "<p class='text-center mb-0'>Une équipe passionnée par la mode et le service client. Nous prenons le temps de vous écouter pour vous proposer la tenue parfaite qui correspondra à vos attentes.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="100">
          <%= public_card(
            icon: "stars", 
            title: "Qualité", 
            content: "<p class='text-center mb-0'>Sélection rigoureuse de nos créateurs et fournisseurs. Nous ne proposons que des pièces de qualité exceptionnelle pour garantir votre élégance.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="200">
          <%= public_card(
            icon: "chat-dots-fill", 
            title: "Conseil", 
            content: "<p class='text-center mb-0'>Écoute attentive de vos besoins, conseils sur mesure et accompagnement tout au long de votre projet. Nous sommes là pour vous guider à chaque étape.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex" data-aos="fade-up" data-aos-delay="300">
          <%= public_card(
            icon: "shield-check", 
            title: "Confiance", 
            content: "<p class='text-center mb-0'>Des centaines de clients satisfaits nous font confiance chaque année. Découvrez nos avis et témoignages pour en savoir plus sur notre service.</p>",
            theme: "light",
            card_style: "info",
            wrapper_class: "col-sm m-2 p-0 w-100"
          ) %>
        </div>
      </div>
    </div>
  </section>
<% end %>
</div>
