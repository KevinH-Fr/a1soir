<div class="bg-white text-dark m-0">
<!-- Section Informations pratiques -->
<section class="py-5 mb-0">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="mb-3" style="font-family: 'Playfair Display', serif; font-size: 2.5rem;">Informations pratiques</h2>
        <p class="opacity-75" style="font-size: 1.1rem;">Toutes les informations pour nous rendre visite</p>
      </div>
    </div>
    
    <div class="row g-4 justify-content-center">
      <div class="col-12 col-md-6 col-lg-4 d-flex">
        <% contact_button = link_to('Nous Ã©crire', "#{contact_path}#message-form", class: 'btn btn-outline-dark btn-sm public-btn-border-radius px-4') %>
        <% contact_content = "#{@texteContact}<div class='text-start mt-2'>#{contact_button}</div>" %>
        <%= public_card(
          icon: "person-lines-fill",
          title: "Contacts",
          content: contact_content.html_safe,
          theme: "light",
          card_style: "info",
          wrapper_class: "p-0 w-100"
        ) %>
      </div>
      <div class="col-12 col-md-6 col-lg-4 d-flex">
        <%= public_card(
          icon: "clock",
          title: "Horaires",
          content: @texteHoraire,
          theme: "light",
          card_style: "info",
          wrapper_class: "p-0 w-100"
        ) %>
      </div>
      <div class="col-12 col-md-6 col-lg-4 d-flex">
        <%= public_card(
          icon: "geo-alt-fill",
          title: "Adresse",
          content: @texteAdresse,
          theme: "light",
          card_style: "info",
          wrapper_class: "p-0 w-100"
        ) %>
      </div>
    </div>
  </div>
</section>
</div>
