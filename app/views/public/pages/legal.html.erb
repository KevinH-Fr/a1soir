<div class="public-main-content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <!-- Navigation rapide -->
        <div class="card border-0 shadow-sm my-4" data-aos="fade-up">
          <div class="card-body p-4">
            <h5 class="fw-bold mb-3">Navigation rapide</h5>
            <div class="row g-3">
              <div class="col-md-4">
                <a href="#mentions-legales" class="text-decoration-none">
