<div class="public-main-content">
    <div class="container-fluid">
        <%= image_tag(@produit.default_image, class: "w-100", style: "object-fit: cover; height: 600px;") %>
    </div>


    <% if @produit.images %>

        <div class="container-fluid mt-2">
            <% @produit.images.each do |image| %>
                <%= image_tag(image, class: "w-25", style: "object-fit: cover; height: 200px;") %>
            <% end %> 
        </div>
    
    <% end %>

    <div class="container-fluid mt-4">
        <h1 class="brand-colored">
            <%= @produit.nom %> 
        </h1>
        <div class="mt-4">
            <%= @produit.description %>
        </div>
        <div class="mt-4 fs-4">
            <%= custom_currency_no_decimals_format(@produit.prixvente) %>
        </div>
        <div class="mt-4">
            <%= @produit.description %>
        </div>

        <div class="my-4">
            <span class="brand-colored me-2">
                Tailles
            </span>
            
            <% @tailles.each do |taille| %>
                <%= link_to taille.nom, url_for(taille: taille), 
                    class: "badge bg-brand-colored fs-3 text-uppercase text-decoration-none" %>
            <% end %>
        </div>

    </div>
</div>