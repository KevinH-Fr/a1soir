<div class="public-main-content bg-white text-dark">
  <div class="container-fluid produit-container py-2 px-4">
    
    <div class="row g-4 g-lg-5" data-scroll-reveal>
      
      <!-- Lien de retour -->
      <div class="mb-1">
        <%= link_to @back_url, class: "text-secondary text-decoration-none d-inline-flex align-items-center btn btn-link p-0" do %>
          <i class="bi bi-arrow-left me-2 fs-5"></i>
          <span>Retour</span>
        <% end %>
      </div>
      <!-- Image/Carousel Column - En haut sur mobile, 50% sur grand écran -->
      <div class="col-12 col-lg-7">
        <div class="sticky-top" style="top: 2rem;">
          <%= render partial: "carousel", locals: { produit: @produit, carousel_class: "carousel-single", show_thumbnails: true } %>
        </div>
      </div>

      <!-- Text Content Column - En bas sur mobile, 50% sur grand écran -->
      <div class="col-12 col-lg-5 order-2 order-lg-2 px-3">
        <div class="d-flex flex-column h-100 px-3 px-md-4">
          
          <!-- Title -->
          <h1 class="mb-3 fw-bold" style="font-family: 'Cormorant Garamond', serif; font-size: 2.5rem; line-height: 1.2;">
            <%= @produit.nom %>
          </h1>

          <!-- Description -->
          <% if @produit.description.present? %>
            <div class="mb-2">
              <p class="opacity-75 mb-0" style="line-height: 1.8; font-size: 1.1rem;">
                <%= @produit.description %>
              </p>
            </div>
          <% end %>

          <hr class="my-4">

          <!-- Badges: Taille, Couleur -->
          <div class="d-flex justify-content-start gap-3 mb-3 fs-5">
            <%= badge_taille(@produit) if @produit.taille.present? %>
            <%= badge_couleur(@produit) if @produit.couleur.present? %>
          </div>

          <!-- Badges: prix vente, prix location -->
          <div class="d-flex justify-content-start gap-5 mb-2 fs-3 text-black">
            <%= badge_prix("Vente", @produit.prixvente, @produit) %>
            <%= badge_prix("Location", @produit.prixlocation) if @produit.prixlocation.present? %>
          </div>

          <!-- Location info -->
          <% if @produit.prixlocation.present? %>
            <div class="mb-2 d-flex align-items-center">
              <i class="bi bi-info-circle me-3 fs-5"></i>
              <small class="opacity-75" style="font-size: 0.95rem;">La location se fait uniquement au magasin.</small>
            </div>
          <% end %>

          <hr>
          <!-- Other sizes -->
          <% if @meme_produit_meme_couleur_autres_tailles.any? %>
            <div class="mb-2 fs-3">
              <h6 class="mb-2 d-flex align-items-center text-secondary">
                <span>Autres tailles disponibles</span>
              </h6>
              <div class="d-flex flex-wrap gap-2">
                <% @meme_produit_meme_couleur_autres_tailles.each do |produit| %>
                  <%= badge_taille_link(produit) %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Other colors -->
          <% if @meme_produit_meme_taille_autres_couleurs.any? %>
            <div class="my-3 fs-3">
              <h6 class="mb-2 d-flex align-items-center text-secondary">
                <span>Autres couleurs disponibles</span>
              </h6>
              <div class="d-flex flex-wrap gap-2">
                <% @meme_produit_meme_taille_autres_couleurs.each do |produit| %>
                  <%= badge_couleur_link(produit) %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Cart button -->
          <div class="py-4">
            <% if session[:from_cabine] %>
              <%= cart_button_for(@produit, type: :cabine, button_class: "py-2 fs-5 bg-black text-white border-0") %>
            <% elsif ENV["ONLINE_SALES_AVAILABLE"] == "true" %>
              <%= cart_button_for(@produit, type: :shop, button_class: "py-2 fs-5 bg-black text-white border-0") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  
  <% if session[:from_cabine] %> <%# && @cabine_cart.any? %>
    <%= render partial: "public/pages/floating_reservation_button" %>
  <% end %>

</div>


<%= render partial: "product_gallery_modal", locals: { produit: @produit } %>

<%= render partial: "public/pages/vous_aimerez_aussi", locals: { produits_similaires: @produits_similaires } %>


<div class="text-center"> 
  <%= link_to produits_index_path(from_cabine: true), class: "btn btn-dark btn-lg px-4 rounded-0" do %>
    <i class="bi bi-plus-circle me-2"></i>Ajouter d'autres produits
  <% end %>
</div>