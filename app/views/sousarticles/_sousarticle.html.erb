<div id="<%= dom_id sousarticle %>">
    <%#= sousarticle.article_id %>
    <%#= sousarticle.produit_id %>

    <div class="row d-flex align-items-center">

      <div class="col-2 text-center">
        <%= image_tag(sousarticle.produit.default_image, width: 25) %>  
      </div>

      <div class="col">
        <strong>Nature:</strong>  <%= sousarticle.nature %>
        <strong>Description:</strong> <%= sousarticle.description %>
        <strong>Prix:</strong>  <%= sousarticle.prix %>
        <strong>Caution:</strong> <%= sousarticle.caution %>
        <strong>Commentaires:</strong>   <%= sousarticle.commentaires %>

      </div>

      <div class="col text-end">
        <%= link_to "", "#collapseSousarticle#{dom_id(sousarticle)}", 
              class: "btn btn-sm btn-primary fa fa-eye m-1", "data-bs-toggle": "collapse", 
              role: "button", "aria-expanded": "false", "aria-controls": "collapseSousarticle#{dom_id(sousarticle)}" %>
        <%= button_to "", edit_sousarticle_path(sousarticle), method: :post, class: "btn btn-sm btn-secondary fa-solid fa-pen-to-square m-1" %>
        <%= button_to "", sousarticle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm m-1 btn-danger fa-solid fa-trash m-1" %>
      </div>

    </div>

</div>
