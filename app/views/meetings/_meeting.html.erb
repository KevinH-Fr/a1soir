
<div id="<%= dom_id meeting %>" class="my-2">

  <div class="card mx-2 mb-3 p-3 light-beige-colored shadow-sm">

    <div class="d-flex flex-col">
      <strong>Nom:</strong>
      <%= meeting.nom %>

      <div class="badge text-dark mx-1">
        <i class="fa fa-calendar"></i>
        <%= l(meeting.datedebut , format: :short) %> -
        <%= l(meeting.datefin , format: :short) %>      
      </div>

      <% if meeting.lieu.present? %>

        <div class="badge text-dark">
          <i class="fa fa-map"></i>
          <%= meeting.lieu %>     
        </div>

      <% end %>

    </div>
    

    <% if meeting.commande %>
      <% unless controller_name == 'commandes' && action_name == 'show' %>
        <p>
          <strong>Commande:</strong>
          <%= meeting.commande.full_name %>
        </p>
      <% end %>
    <% end %>
    
    <% if meeting.client %>
      <p>
        <strong>Client:</strong>
        <%= meeting.client.full_name %>
      </p>
    <% end %>

    
    <%= links_record(meeting) %>  

  </div>

</div>