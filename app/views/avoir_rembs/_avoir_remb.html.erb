<div id="<%= dom_id avoir_remb %>">

  <div class="card mx-2 mb-3 p-2 light-beige-colored shadow-sm">

    <div class="d-flex align-items-center">

      <div class="row d-flex align-items-center">

        <div class="col">
        
          <strong>
            <%= avoir_remb.type_avoir_remb %>
          </strong>
          de
          <%= custom_currency_no_decimals_format(avoir_remb.montant) %>

          <% if avoir_remb.nature.present? %>
            Nature: 
            <%= avoir_remb.nature %>            
          <% end %>

          <%= "le #{avoir_remb.custom_date.strftime("%d/%m/%Y")}" if avoir_remb.custom_date.present? %>


          <%= link_to "", "#collapseAvoir_remb#{dom_id(avoir_remb)}", class: "btn btn-sm btn-outline-primary fa fa-eye m-1", "data-bs-toggle": "collapse", role: "button", "aria-expanded": "false", "aria-controls": "collapseAvoir_remb#{dom_id(avoir_remb)}" %>

        </div>

      </div>
    
    </div>

    <div class="text-end">
      <%= links_record(avoir_remb) %>  
    </div>

    <div class="collapse" id="collapseAvoir_remb<%= dom_id(avoir_remb) %>">

    </div>

  </div>

</div>
