<div id="<%= dom_id commande %>"class="mb-2">

  <div class="card mx-2 mb-3 p-3 light-beige-colored shadow-sm">
    

    <div class="row">
      <div class="col-10">
        <%= link_to commande_path(commande), class: "text-decoration-none text-dark" do %>
          <strong><%= commande.ref_commande %> </strong>

          <span class="m-1"> <%= commande.full_name %> </span>
          <span class="m-1"> <%= commande.type_locvente %> </span>

          <%= render partial: 'commandes/toggles_statut', locals: { commande: commande } %>


        <% end %>
      </div>
      <div class="col-2 text-end">
        <%= link_to "", "#collapseCommande#{dom_id(commande)}", 
          class: "btn btn-sm btn-primary fa fa-eye m-1", "data-bs-toggle": "collapse", 
          role: "button", "aria-expanded": "false", "aria-controls": "collapseCommande#{dom_id(commande)}" %>
      </div>
    </div>

    <div class="collapse" id="collapseCommande<%= dom_id(commande) %>">

      <p>
        <strong>Nom:</strong>
        <%= commande.nom %>
      </p>

      <p>
        <strong>Montant:</strong>
        <%= commande.montant %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= commande.description %>
      </p>

      <p>
        <strong>Client:</strong>
        <%= commande.client_id %>
      </p>

      <p>
        <strong>Debutloc:</strong>
        <%= commande.debutloc %>
      </p>

      <p>
        <strong>Finloc:</strong>
        <%= commande.finloc %>
      </p>

      <p>
        <strong>Dateevent:</strong>
        <%= commande.dateevent %>
      </p>

      <p>
        <strong>Typeevent:</strong>
        <%= commande.typeevent %>
      </p>

      <p>
        <strong>Profile:</strong>
        <%= commande.profile_id %>
      </p>

      <p>
        <strong>Commentaires:</strong>
        <%= commande.commentaires %>
      </p>

      <p>
        <strong>Commentaires doc:</strong>
        <%= commande.commentaires_doc %>
      </p>

      <p>
        <strong>Type:</strong>
        <%= commande.type_locvente %>
      </p>

      <p>
        <strong>Devis:</strong>
        <%= commande.devis %>
      </p>
    
      <%= links_record(commande) %>  

    </div>
  
  </div>

</div>