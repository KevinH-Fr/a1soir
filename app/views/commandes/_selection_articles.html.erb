
<div class="card mx-2 my-3 light-beige-colored shadow-sm">

    <div class="card-header fs-4 fw-bold text-center">
        SÃ©lectionner un article
    </div>

    <div class="card-body p-3">
    
        <% @produits.each do |produit| %>
            <div class="mb-2">
            
                <button class="btn m-2" type="button" 
                    data-bs-toggle="collapse" data-bs-target="#collapseNewArticle<%= produit.id %>" aria-expanded="false">
                    
                    <i class="fa-solid fa-square-plus text-warning fa-2xl mx-2"></i>
                    <%= image_tag(produit.image1, width: 100) if produit.image1.present? %>
                    <%= produit.full_name %>
                </button>

                <div class="collapse" id="collapseNewArticle<%= produit.id %>">
                    <div id="new" class="">
                        <%#= render partial: 'articles/form', locals: { commande_id: @commande.id, produit_id: produit.id, article: Article.new } %>
                    </div>
                </div>

            </div>

            <hr>
        <% end %>

    </div>


</div>