<div id="<%= dom_id paiement_recu %>">

  <div class="card mx-2 mb-3 p-2 light-beige-colored shadow-sm">

    <div class="row d-flex align-items-center">

      <div class="col">
        <strong> <%= paiement_recu.typepaiement %> </strong>
        <%= custom_currency_no_decimals_format(paiement_recu.montant) %>
        <%= "par #{paiement_recu.moyen}" if paiement_recu.moyen.present? %>

        <%= link_to "", "#collapsePaiementRecu#{dom_id(paiement_recu)}", 
              class: "btn btn-sm btn-primary fa fa-eye m-1", "data-bs-toggle": "collapse", 
              role: "button", "aria-expanded": "false", "aria-controls": "collapsePaiementRecu#{dom_id(paiement_recu)}" %>
      </div>

      <div class="text-end">
        <%= links_record(paiement_recu) %>  
      </div>

    </div>

     <div class="collapse" id="collapsePaiementRecu<%= dom_id(paiement_recu) %>">
      <p>
        <strong>Commentaires:</strong>
        <%= paiement_recu.commentaires %>
      </p>
    </div>

  </div>

</div>
