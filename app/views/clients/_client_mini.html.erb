<div id="<%= dom_id client %>"class="my-2">

  <%= card_main_model("Client", "user") %>

  <div class="card mx-2 mb-3 p-3 light-beige-colored shadow-sm">

  <div class="row">
    <div class="col-10">
        <strong> <%= client.full_name %> </strong> 

        <%= custom_badge("fa-phone", "", "secondary", client.tel) %>
        <%= custom_badge("fa-at", "", "secondary", client.mail) %>
        
    </div>
    
    <div class="col-2 text-end">
        <%= link_to "", "#collapseClient", class: "btn btn-sm btn-primary fa fa-eye", "data-bs-toggle": "collapse", role: "button", "aria-expanded": "false", "aria-controls": "collapseExample" %>
    </div>
  </div>
  

    <div class="collapse" id="collapseClient">

        <p>
            <strong>Commentaires:</strong> <%= client.commentaires %>
        </p>

        <p>
            <strong>Propart:</strong> <%= client.propart %>
        </p>

        <p>
            <strong>Intitule:</strong> <%= client.intitule %>
        </p>

        <p>
            <strong>Tel2:</strong> <%= client.tel2 %>
        </p>

        <p>
           <strong>Mail2:</strong>  <%= client.mail2 %>
        </p>

        <p>
            <strong>Adresse:</strong> <%= client.adresse %>
        </p>

        <p>
            <strong>Cp:</strong> <%= client.cp %>
        </p>

        <p>
            <strong>Ville:</strong> <%= client.ville %>
        </p>

        <p>
            <strong>Pays:</strong>   <%= client.pays %> </p>

        <p>
            <strong>Contact:</strong>  <%= client.contact %>
        </p>

        <%= links_record(client) %>  

    </div>

  </div>

</div>