<%= form_with(model: @page_edition, url: page_edition_index_path, method: :post) do |form| %>
  <!-- Step 1: Select doc type -->
  <%= form.label :doc_type %>
  <%= form.select :doc_type, options_for_select(['Type 1', 'Type 2', 'Type 3']) %>
  <%= form.submit "Next" %>
<% end %>

<% if @current_step >= 2 %>
  <%= form_with(model: @page_edition, url: page_edition_index_path(step: 2), method: :post) do |form| %>
    <!-- Step 2: Set comment -->
    <%= form.label :comment %>
    <%= form.text_area :comment %>
    <%= form.submit "Next" %>
  <% end %>
<% end %>

<% if @current_step == 3 %>
  <%= form_with(model: @page_edition, url: page_edition_index_path(step: 3), method: :post) do |form| %>
    <!-- Step 3: Select edition type -->
    <%= form.label :edition_type %>
    <%= form.select :edition_type, options_for_select(['Edition 1', 'Edition 2', 'Edition 3']) %>
    <%= form.submit "Submit" %>
  <% end %>
<% end %>
