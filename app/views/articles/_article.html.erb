
<div id="<%= dom_id article %>">

  <div class="card mx-2 my-3 p-2 light-beige-colored shadow-sm">
    <div class="row d-flex align-items-center">

      <div class="col">
        <%= image_tag(article.produit.image1, width: 100) if article.produit.image1.present? %>  
      </div>
    
      <div class="col">


        <h4 class="fw-bold"> <%= article.produit.nom %>  </h4>

        <%= article.locvente %>  
        qt√©.: <%= article.quantite %>  
        prix: <%= article.prix %>  
        total: <%= article.total %>  
        caution: <%= article.caution %>  
    
      </div>
      <div class="col text-end">
        <%= link_to "", "#collapseArticle#{dom_id(article)}", class: "btn btn-sm btn-primary fa fa-eye m-1", "data-bs-toggle": "collapse", role: "button", "aria-expanded": "false", "aria-controls": "collapseArticle#{dom_id(article)}" %>
        <%= button_to "", edit_article_path(article), method: :post, class: "btn btn-sm btn-secondary fa-solid fa-pen-to-square m-1" %>
        <%= button_to "", article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm m-1 btn-danger fa-solid fa-trash m-1" %>
      </div>
    </div>
    

    <%#= article.commande_id %>
    <%#= article.totalcaution %>    
    
    <div class="collapse" id="collapseArticle<%= dom_id(article) %>">
      <p>
        <strong>Longueduree:</strong>
        <%= article.longueduree %>
      </p>

      <p>
        <strong>Commentaires:</strong>
        <%= article.commentaires %>
      </p>
    </div>

  </div>

</div>
